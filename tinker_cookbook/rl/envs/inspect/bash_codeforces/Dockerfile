FROM ubuntu:22.04

ARG DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    python-is-python3 \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install --no-cache-dir \
    pytest \
    pytest-timeout \
    numpy \
    scipy \
    pandas \
    sympy \
    matplotlib

WORKDIR /testbed

ENV PYTHONPATH=/testbed:$PYTHONPATH